@model Realtors_Portal.Models.RP_users
@{
    ViewBag.Title = "Login";
}

<!-- Login -->
<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 mx-auto">
                <div class="card padding-card">

                    @if (!(ViewBag.Error == null))
                    {
                        <div class="alert alert-danger rounded-0">
                            @ViewBag.Error
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <div class="card-body">

                        <h2 class="card-title text-center mb-4">LOGIN</h2>

                        @using (Html.BeginForm("login", "Home", FormMethod.Post))
                        {

                            <div class="form-group mb-3">
                                @Html.TextBoxFor(m => m.u_username, new { @class = "form-control", placeholder = "Enter Username" })
                            </div>

                            <div class="form-group mb-3">
                               @Html.PasswordFor(m => m.u_password, new { @class = "form-control", placeholder = "Enter Password" })
                            </div>

                            <input type="submit" class="btn-base btn-block" value="LOGIN">
                        }


                        <div class="mt-4 text-center">
                            <a href="forget.html">Forget your password?</a><br />
                            <a href="@Url.Action("Register","Home")">Don't have an account? <span class="text-base">Register Here</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Login -->